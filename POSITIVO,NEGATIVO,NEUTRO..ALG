Algoritmo "Positivo,negativo,neutro."
var
numero: inteiro
inicio
escreva("informe um número: " )
leia(numero)

se (numero > 0) entao
escreva (" O número é positivo.")
senao
se ( numero < 0) entao
escreva ("O número é negativo.")
senao
escreva( "O número é neutro. ")
fimse
fimse
fimalgoritmo